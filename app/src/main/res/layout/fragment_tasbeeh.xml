<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/IslamicBackground">

    <ImageView
        android:id="@+id/sebha_image"
        style="@style/RadioIcons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/sebha_image"
        app:layout_constraintHeight_percent="0.4"
        android:layout_margin="24dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/sebha_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عدد التسبيحات"
        android:textSize="22sp"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toBottomOf="@id/sebha_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
<TextView
    android:id="@+id/sebha_counter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="30"
    app:layout_constraintStart_toStartOf="parent"
    android:textSize="22sp"
    android:padding="24dp"
    android:layout_marginVertical="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/sebha_title"
    style="@style/SebhaCountBackground"
    android:textColor="@color/gray"
    />
    <TextView
        android:id="@+id/tasbeeh_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="سبحان الله"
        android:textColor="@color/white"
        style="@style/SebhaCountBackground"
        android:padding="24dp"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sebha_counter"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>