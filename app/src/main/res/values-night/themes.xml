<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslamiAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_blue_variant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextStyle">
        <item name="android:textColor" >@color/white</item>
    </style>
    <style name="IslamicBackground">
        <item name="android:background">@drawable/background_dark</item>
    </style>

<style name="islami_bottom_navigation">
<item name="android:background">@color/dark_blue</item>
<item name="itemTextColor">@color/bottom_nav_selector_dark</item>
<item name="itemIconTint">@color/bottom_nav_selector_dark</item>
<item name="itemRippleColor">@color/transparent</item>
<item name="itemActiveIndicatorStyle">@null</item>
<item name="itemIconSize">40dp</item>
</style>
    <style name="DividerStyle">
        <item name="android:background">@color/yellow</item>
    </style>
    <style name="DetailsScreenCardBackground">
        <item name="android:background">@drawable/verses_background_dark</item>
    </style>
    <style name="BackButton">
        <item name="tint">@color/white</item>
    </style>
    <style name="RadioIcons">
        <item name="tint">@color/yellow</item>
    </style>
    <style name="SebhaCountBackground">
        <item name="android:background">@drawable/sebha_count_bg_dark</item>
    </style>
</resources>