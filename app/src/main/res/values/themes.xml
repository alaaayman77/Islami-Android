<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslamiAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryDark">@color/gold</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold</item>

        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gold</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gold</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="islami_bottom_navigation">
        <item name="android:background">@color/gold</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemIconSize">40dp</item>
    </style>
    <style name="TextStyle">
        <item name="android:textColor" >@color/gray</item>
    </style>
    <style name="IslamicBackground">
        <item name="android:background">@drawable/background</item>
    </style>
    <style name="DividerStyle">
        <item name="android:background">@color/gold</item>
    </style>
    <style name="DetailsScreenCardBackground">
        <item name="android:background">@drawable/verses_background</item>
    </style>
    <style name="BackButton">
        <item name="tint">@color/black</item>
    </style>
    <style name="RadioIcons">
        <item name="tint">@color/goldVariant</item>
    </style>
    <style name="SebhaCountBackground">
    <item name="android:background">@drawable/sebha_count_bg</item>
    </style>
</resources>